# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=postgresql://user:password@localhost:5432/choremanager

# Email Settings (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-password

# JWT Settings (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Celery / Reminders
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REMINDER_LEAD_TIME_MINUTES=60
REMINDER_COOLDOWN_MINUTES=120
REMINDER_SCAN_INTERVAL_MINUTES=10
RECURRENCE_GENERATE_INTERVAL_MINUTES=60
RECURRENCE_LOOKAHEAD_DAYS=30

# Home Assistant (notifications) - optional global fallback; per-household config is set in the Admin Hub UI
# HA_BASE_URL=http://homeassistant.local:8123
# HA_LONG_LIVED_TOKEN=
# HA_DEFAULT_NOTIFY_TARGET=
# HA_VERIFY_SSL=True

# Media and Static Files
MEDIA_ROOT=media
STATIC_ROOT=staticfiles
